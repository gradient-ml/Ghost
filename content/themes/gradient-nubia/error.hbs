{{!< default}}

<div class='o-wrapper'>

  <div class='o-grid'>
    <div class='o-grid__col o-grid__col--full'>
      <div class='c-archive'>
        <h2 class='c-archive__title'>404</h2>
        <p class='c-archive__description'>Page Not Found</p>
      </div>
    </div>
  </div>

  <div class='o-grid'>
    {{#get 'posts' limit='6' include='tags, author'}}
      <div class='o-grid__col o-grid__col--full'>
        <h3 class='u-left u-font-medium'>Recent Posts</h3>
        <a href='{{ @blog.url }}' class='u-right u-font-small'>Home Page &#x27A3;</a>
      </div>
      {{> loop }}
    {{/get}}
  </div>

</div>